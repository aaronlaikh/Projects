import java.sql.*;

public class JDBC {

	public static void main(String[] args) throws Exception
	{
		Class.forName("com.mysql.jdbc.Driver").newInstance();
		
		Connection connection = DriverManager.getConnection("jdbc:mysql://localhost:3306/moviedb", "root", "asdf1234");
		
		Statement select = connection.createStatement();
		ResultSet result = select.executeQuery("Select * from stars");
		
		System.out.println("The results of the query");
		ResultSetMetaData metadata = result.getMetaData();
		System.out.println("There are " + metadata.getColumnCount() + " columns.");
		
		for (int i = 0; i < metadata.getColumnCount(); i++)
		{
			System.out.println("Type of column " + i + " is " + metadata.getColumnName(i));
		}
		
		while (result.next())
		{
			System.out.println("Id = " + result.getInt(1));
			System.out.println("Name = " + result.getString(2) + result.getString(3));
			System.out.println("DOB = " + result.getString(4));
			System.out.println("photoURL = " + result.getString(5));
			System.out.println();
		}
	}
}
